package com.example.myplugin;

import org.bukkit.Bukkit;
import org.bukkit.Location;
import org.bukkit.World;
import org.bukkit.entity.Player;
import org.bukkit.event.EventHandler;
import org.bukkit.event.Listener;
import org.bukkit.event.player.PlayerJoinEvent;
import org.bukkit.plugin.java.JavaPlugin;

public class MyPlugin extends JavaPlugin implements Listener {

    @Override
    public void onEnable() {
        // Plugin aktivieren und den Event Listener registrieren
        getLogger().info("Mein Plugin wurde aktiviert!");
        Bukkit.getPluginManager().registerEvents(this, this);
        // Hier kannst du weitere Initialisierungen vornehmen
    }

    @Override
    public void onDisable() {
        // Plugin deaktivieren
        getLogger().info("Mein Plugin wurde deaktiviert!");
        // Hier kannst du Aufräumarbeiten vornehmen, falls nötig
    }

    @EventHandler
    public void onPlayerJoin(PlayerJoinEvent event) {
        Player player = event.getPlayer();
        World world = player.getWorld(); // Die Welt, in der der Spieler spawnen soll
        double x = 13.42; // X-Koordinate
        double y = 76.00; // Y-Koordinate
        double z = 31.48; // Z-Koordinate
        float yaw = 537.90; // Blickrichtung in Grad
        float pitch = 0.90; // Neigung in Grad
        Location spawnLocation = new Location(world, x, y, z, yaw, pitch);
        player.teleport(spawnLocation); // Spieler zur Spawn-Position teleportieren
    }
}
